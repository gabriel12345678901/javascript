    function data(){
        var agora= new Date();
        agora.setDate();
        document.getElementById("data1").value=Date();
       
    }
   
    function dataHora(){
        //var horario = new Date();
        
        setTimeout("dataHora()",1000);
        document.getElementById("txtData").value=Date();
    
    }
    
    function limparComb(){
        
        var lv="";
        document.getElementById("lt").value=lv;
        document.getElementById("custoComb").value=lv;
        document.getElementById("receitaComb").value=lv;
        document.getElementById("lucroComb").value=lv;
        document.getElementById("lucroLt").value=lv;
        document.getElementById("custoLt").value=lv;
        
        
        }
        
        function limparLj(){
        
        var lv="";
        document.getElementById("custoLj").value=lv;
        document.getElementById("receitaLj").value=lv;
        document.getElementById("lucroLj").value=lv;
        document.getElementById("lucroUnLj").value=lv;
        document.getElementById("custoUnLj").value=lv;
        
               
        }
    
    function limparResultado(){
        
        var lv="";
      
        document.getElementById("projecaoR").value=lv;
        document.getElementById("projecaoLt").value=lv;
        document.getElementById("projecaoLj").value=lv;
        document.getElementById("resultadoRedeBox").value=lv;
        document.getElementById("despesa").value=lv;
        }
    
    function limparResultadoGeral(){
       var lv="";
       document.getElementById("resultadoBB").value=lv;
       document.getElementById("resultadoMAC").value=lv;
       document.getElementById("resultadoInt").value=lv; 
       document.getElementById("resultadoNH").value=lv;
       document.getElementById("resultadoTotal").value=lv;
    }
    
    function somarValoresComb(){
        
        //variaveis recebem valores digitados
        var lt = document.getElementById("lt").value;
        var custoComb = document.getElementById("custoComb").value;
        var lucroComb = document.getElementById("lucroComb").value;
        var custoLt = parseInt(custoComb) / parseInt(lt);
        document.getElementById("custoLt").value=custoLt;
        
        }
        
        function somarValoresLj(){
        
        
        //variaveis recebem valores digitados
        var custoLj = document.getElementById("custoLj").value;
        var receitaLj = document.getElementById("receitaLj").value;
        var lucroLj = document.getElementById("lucroLj").value;
        
        var lucroUnLj = parseInt(lucroLj) / parseInt(receitaLj);
        var custoUnLj = parseInt(custoLj) / parseInt(receitaLj);
       
        document.getElementById("lucroUnLj").value=lucroUnLj;
        document.getElementById("custoUnLj").value=custoUnLj;
        
        }
        
        function selecionarServico(){
        
        var selecao=document.getElementById("idcomboServico").value;
       
         switch(selecao){
             
             
            case "0":document.getElementById("despesa").value="";
              break;
            
             case "1":document.getElementById("despesa").value=despBB;
              break;
             case "2":document.getElementById("despesa").value=despMAC;  
              break;
             case "3":document.getElementById("despesa").value=despInt;
              break;
             case "4":document.getElementById("despesa").value=despNH;
                 
         }
         
       }
   
        function selecionarDespesa(){
        
        
         var selecao=document.getElementById("idcombo").value;
       
        var despBB=parseInt(565335.71);
        var despMAC=parseInt(455343.25);
        var despInt=parseInt(59777.91);
        var despNH=parseInt(114681.00);
        var semProjecao="Sem projeção";
         switch(selecao){
             
             
            case "0":document.getElementById("despesa").value="";
              break;
            
             case "1":document.getElementById("despesa").value=despBB;
              break;
             case "2":document.getElementById("despesa").value=despMAC;  
              break;
             case "3":document.getElementById("despesa").value=despInt;
              break;
             case "4":document.getElementById("despesa").value=despNH;
                 
         }
         
       }
       
       function somarValoresResultado(){
         var dataAtual= new Date();
         var dia=dataAtual.getDate();
         var diaFimMes=30;
         var faltamDias=diaFimMes-dia; 
         
         //correção caso faltem 0 dias.
         switch(faltamDias){
             case 0:faltamDias=1;
         }
         
         var selecao=document.getElementById("idcombo").value;
        
         
         var lucroPorLitro=document.getElementById("lucroLt").value;
         var lt=document.getElementById("lt").value;
         var lucroComb=document.getElementById("lucroComb").value;
         var lucroLj=document.getElementById("lucroLj").value;  
         var despesa=document.getElementById("despesa").value;
         alert(despesa);
         var projecaoLt=parseInt(lt) / parseInt(dia) * parseInt(faltamDias) + parseInt(lt);
         var projecaoR=parseInt(lucroComb)/ parseInt(dia) * parseInt(faltamDias) + parseInt(lucroComb);
         var projecaoLj=parseInt(lucroLj) / parseInt(dia) * parseInt(faltamDias)+ parseInt(lucroLj);
         var resultadoValor= parseInt(projecaoLj) + parseInt(projecaoR) - parseInt(despesa); 
         
         document.getElementById("projecaoR").value=projecaoR;
         document.getElementById("projecaoLt").value=projecaoLt;
         document.getElementById("projecaoLj").value=projecaoLj;
         document.getElementById("resultadoRedeBox").value=resultadoValor;
        
        
        switch(selecao){
             
             
            case "0":
                document.getElementById("despesa").value="";
              break;
            
             case "1":var resultadoBB=document.getElementById("resultadoRedeBox").value;
                          document.getElementById("resultadoBB").value=resultadoBB;
              break;
             case "2":var resultadoMAC=document.getElementById("resultadoRedeBox").value;
                          document.getElementById("resultadoMAC").value=resultadoMAC;
              break;
             case "3":var resultadoInt=document.getElementById("resultadoRedeBox").value;
                          document.getElementById("resultadoInt").value=resultadoInt;
              break;
             case "4":var resultadoNH=document.getElementById("resultadoRedeBox").value;
                          document.getElementById("resultadoNH").value=resultadoNH;
                 
         }
       
    }  
  
      
function escolhaprop(form3) { 
  
  if (form3.escolha[1].checked) {
      document.getElementById("despesa").value="";
      var despesa=document.getElementById("despesa").value;
      
  }

} 

function somarResultadoGeral(){
       var resultadoGeral;
       var valorBB=document.getElementById("resultadoBB").value;
       var valorMAC=document.getElementById("resultadoMAC").value;
       var valorInt=document.getElementById("resultadoInt").value; 
       var valorNH=document.getElementById("resultadoNH").value;
        
        resultadoGeral=parseInt(valorBB)+parseInt(valorMAC)+parseInt(valorInt)+parseInt(valorNH);
        document.getElementById("resultadoTotal").value=resultadoGeral;
        
    }
    
